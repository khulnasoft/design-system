        <Kds::Form::SuperSelect::AfterOptions
          @content="This is the a very very very very very very long text that should wrap on multiple lines"
        />
      </Shw::Outliner>
    </SF.Item>
    <SF.Item @label="with @showAll & @selectedCount=0" {{style max-width="500px"}}>
