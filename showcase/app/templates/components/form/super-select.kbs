                  Option 1
                </li>
                <li class="ember-power-select-option" role="option">
                  Option 2
                </li>
              </Kds::Form::SuperSelect::OptionGroup>
            </ul>
            <Kds::Form::SuperSelect::AfterOptions
              @showAll={{this.noop}}
              @showSelected={{this.noop}}
              @clearSelected={{this.noop}}
              @selectedCount={{123}}
              @resultCountMessage="1 selected of 2 total"
            />
          </div>
        </div>
      </div>
    </SF.Item>
  </Shw::Flex>
