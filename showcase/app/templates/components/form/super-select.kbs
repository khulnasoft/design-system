      <Shw::Outliner>
        <Kds::Form::SuperSelect::AfterOptions @content="Lorem ipsum dolor" />
      </Shw::Outliner>
    </SF.Item>
    <SF.Item @label="with @content (generic)" {{style max-width="500px"}}>
      <Shw::Outliner>
        <Kds::Form::SuperSelect::AfterOptions
          @content={{component "form/super-select/mock-components/generic-content"}}
        />
      </Shw::Outliner>
    </SF.Item>
    <SF.Item @label="with @content with long test" {{style max-width="500px"}}>
