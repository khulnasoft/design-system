        <Kds::Form::SuperSelect::AfterOptions
          @showAll={{this.noop}}
          @showOnlySelected={{true}}
          @selectedCount="0"
          @resultCountMessage="This is the resultCountMessage"
        />
      </Shw::Outliner>
    </SF.Item>
    <SF.Item @label="with @showAll & @selectedCount>0" {{style max-width="500px"}}>
      <Shw::Outliner>
        <Kds::Form::SuperSelect::AfterOptions
          @showAll={{this.noop}}
          @showOnlySelected={{true}}
          @selectedCount="123"
          @clearSelected={{this.noop}}
          @resultCountMessage="This is the resultCountMessage"
        />
      </Shw::Outliner>
    </SF.Item>
    <SF.Item @label="with @showSelected & @selectedCount=0" {{style max-width="500px"}}>
      <Shw::Outliner>
        <Kds::Form::SuperSelect::AfterOptions
          @showSelected={{this.noop}}
          @selectedCount="0"
          @resultCountMessage="This is the resultCountMessage"
        />
      </Shw::Outliner>
    </SF.Item>
    <SF.Item @label="with @showSelected & @selectedCount>0" {{style max-width="500px"}}>
      <Shw::Outliner>
        <Kds::Form::SuperSelect::AfterOptions
          @showSelected={{this.noop}}
          @selectedCount="123"
          @clearSelected={{this.noop}}
          @resultCountMessage="This is the resultCountMessage"
        />
      </Shw::Outliner>
    </SF.Item>
    <SF.Item @label="with @resultCountMessage with long text" {{style max-width="500px"}}>
      <Shw::Outliner>
        <Kds::Form::SuperSelect::AfterOptions
          @showNoSelectedMessage={{true}}
          @showAll={{this.noop}}
          @showSelected={{this.noop}}
          @clearSelected={{this.noop}}
          @selectedCount={{123}}
          @resultCountMessage="This is the a very very very long text that should wrap on multiple lines"
        />
      </Shw::Outliner>
    </SF.Item>
  </Shw::Flex>

  <Shw::Text::H4>Within a dropdown with options</Shw::Text::H4>

  <Shw::Flex as |SF|>
    <SF.Item @label="Single level">
      <div class="kds-form-super-select kds-form-super-select-multiple">
